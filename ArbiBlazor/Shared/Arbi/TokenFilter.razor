

    <div class="container">
  <!--Amount-->
  <div class="row mb-1">
    <div class="row">
      <div class="col">
        <input type="range" class="form-range" min="1" max="100" value="1"
          id="result_num">
      </div>
      <div class="col-3">
        <span class="input-group-text">20</span>
      </div>
    </div>
  </div>
  <!--Price-->
  <div class="row mb-1">
    <div class="col">
      <div class="form-floating">
        <input type="number" class="form-control" id="ask"
          placeholder="1.0" value="1.0">
        <label for="ask">Ask</label>
      </div>
    </div>
    <div class="col">
      <div class="form-floating">
        <input type="number" class="form-control" id="bid"
          placeholder="1.0" value="1.0">
        <label for="bid">Bid</label>
      </div>
    </div>
  </div>
  <!--Volume-->
  <div class="row mb-1">
    <div class="col">
      <div class="form-floating">
        <input type="number" class="form-control" id="ask_vol"
          placeholder="10.0" value="10.0">
        <label for="ask_vol">Ask Vol</label>
      </div>
    </div>
    <div class="col">
      <div class="form-floating">
        <input type="number" class="form-control" id="bid_vol"
          placeholder="10.0" value="10.0">
        <label for="bid_vol">Bid Vol</label>
      </div>
    </div>
  </div>
  <!--Day Volume-->
  <div class="row mb-1">
    <div class="col">
      <div class="form-floating">
        <input type="number" class="form-control" id="ask_vol_day"
          placeholder="1000.0" value="1000.0">
        <label for="ask_vol">Ask DayVol</label>
      </div>
    </div>
    <div class="col">
      <div class="form-floating">
        <input type="number" class="form-control" id="bid_vol_day"
          placeholder="1000.0" value="1000.0">
        <label for="bid_vol">Bid DayVol</label>
      </div>
    </div>
  </div>
  <!--Profit-->
  <div class="row mb-1">
    <div class="col">
      <div class="form-floating">
        <input type="number" class="form-control" id="min_percent"
          placeholder="0.0" value="0.0">
        <label for="ask_vol">Min Profit</label>
      </div>
    </div>
    <div class="col">
      <div class="form-floating">
        <input type="number" class="form-control" id="max_percent"
          placeholder="100.0" value="100.0">
        <label for="bid_vol">Max Profit</label>
      </div>
    </div>
  </div>
  <div class="container">
            @if (BuyItems.Count == 0)
            {
        <p>Loading...</p>
            }
            else
            {
        <div class="btn-group" role="group"
          aria-label="Basic checkbox toggle button group">
                    @foreach (var ex in BuyItems)
                    {
              <input type="checkbox" class="btn-check"
                id="@MakeBuyId(ex.Item?.Id!)" autocomplete="off">
              <label class="btn btn-outline-primary"
                for="@MakeBuyId(ex.Item?.Id!)">@ex.Item?.Name</label>
                    }
        </div>
            <div class="btn-group" role="group"
          aria-label="Basic checkbox toggle button group">
                    @foreach (var ex in BuyItems)
                    {
              <input type="checkbox" class="btn-check"
                id="@MakeSellId(ex.Item?.Id!)" autocomplete="off">
              <label class="btn btn-outline-danger"
                for="@MakeSellId(ex.Item?.Id!)">@ex.Item?.Name</label>
                    }
        </div>
            }

  </div>
</div>
