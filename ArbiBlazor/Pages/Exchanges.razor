@page "/exchanges"
@inject ArbiBlazor.Services.IExchangeService exchangeService
<pagetitle>Exchanges</pagetitle>

<h3 class="display-3">Exchanges</h3>
@if (ExchangeEntities.Count == 0)
{
<div>
    <p>Loading...</p>
</div>

}
else
{
<div class="row row-cols-1 row-cols-md-2 g-4">

    @foreach (var ex in ExchangeEntities)
    {
    <div class="col">
        <div class="card">
            <div class="card-body">
                @if (ex.Working)
                {
                <a href="@ex.Url" target="_blank" class="card-link">
                    <h5 class="card-title">@ex.Name</h5>
                </a>
                }
                else
                {
                <h5 class="card-title">@ex.Name</h5>
                }

                <h6 class="card-subtitle mb-2 text-body-secondary">@ex.Id</h6>

                @if(!ex.Working)
                {
                <div class="card-footer">
                    <small class="text-body-secondary">Not working</small>
                </div>
                }

            </div>
        </div>

    </div>
    }
</div>
}