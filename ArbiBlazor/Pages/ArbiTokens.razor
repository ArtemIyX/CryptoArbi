@page "/tokens"
@using System.Globalization
@inject ArbiBlazor.Services.IArbiService arbiService
@inject ArbiBlazor.Services.IArbiContainer arbiContainer
@inject ArbiBlazor.Services.IDisplaySerivce dS
<pagetitle>Tokens</pagetitle>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Token</th>
      <th scope="col"></th>
      <th scope="col">AskVolume</th>
      <th scope="col">BidVolume</th>
      <th scope="col">Profit</th>
    </tr>
  </thead>
  <tbody>
    @if (arbiContainer.Items is null)
    {
    <div>
      <h5>Loading...</h5>
    </div>
    }
    else if (arbiContainer.Items.Count == 0)
    {
    <div>
      <h5>No tokens :C</h5>
    </div>
    }
    else
    {

    @foreach (var arbi in arbiContainer.Items)
    {
    <tr>
        <th scope="row">
        <div class="col">
          <div class="row">
            <p>@arbi.FullSymbolName</p>
          </div>
          <div class="row">
            <small class="text-muted">@arbi.Updated.ToString("HH:mm",CultureInfo.InvariantCulture)</small>
          </div>

        </div>
      </th>
        <td class="align-middle">
          <div class="card">
          <div class="row">
            <div
              class="col text-center">
              <a href=@arbi.BuyUrl target="_blank" class="link-primary">
                @arbi.BuyName
              </a>
            </div>
            <div
              class="col text-center">
              <a href=@arbi.SellUrl target="_blank" class="link-danger">
                @arbi.SellName
              </a>
            </div>
          </div>
          <div class="row">
            <div class="col text-center"><italic
                class="text-secondary">@dS.Price(@arbi.Ask)</italic></div>
            <div class="col text-center"><italic
                class="text-secondary">@dS.Price(@arbi.Bid)</italic></div>
          </div>
        </div>
      </td>

              <td class="align-middle">@dS.Volume(arbi.AskVolumeUSDT)</td>
              <td class="align-middle">@dS.Volume(arbi.BidVolumeUSDT)</td>
              <td class="align-middle">@dS.Percent(arbi.PriceDifferencePercentage)</td>
    </tr>
    }
    }
  </tbody>
</table>
